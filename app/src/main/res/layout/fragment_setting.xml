<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/tvBookName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Book Name"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:text="" />

    <Button
        android:id="@+id/buttonIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:text=" Check In " />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check In/Out"
        android:textSize="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/tvBookName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Book Name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:textSize="18dp"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/buttonOut"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="560dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Out" />

    <EditText
        android:id="@+id/tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="460dp"
        android:hint="Student Name"
        android:text="" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroup3"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="180dp">



        <RadioButton
            android:id="@+id/radioButler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mrs.Butler"/>

        <RadioButton
            android:id="@+id/radioPriya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mrs.Priya"
            android:layout_gravity="center"/>

    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadioGroup4"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="140dp">



        <RadioButton
            android:id="@+id/radioButler2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mrs.Butler"/>

        <RadioButton
            android:id="@+id/radioPriya2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mrs.Priya"
            android:layout_gravity="center"/>

    </RadioGroup>

</FrameLayout>